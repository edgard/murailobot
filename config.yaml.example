# Telegram Bot Configuration
telegram:
  token: "YOUR_TELEGRAM_BOT_TOKEN" # Bot token from BotFather (required)
  admin_user_id: 123456789 # Telegram User ID of the bot administrator (required, must be > 0)

# Database Configuration
database:
  path: "storage.db" # SQLite database file path
  max_history_messages: 100 # Maximum historical messages for context (range: > 0)

# Google Gemini API Configuration
gemini:
  api_key: "YOUR_GEMINI_API_KEY" # Gemini API Key (required)
  model_name: "gemini-2.0-flash" # Gemini model name
  temperature: 1.0 # Sampling temperature for generation (range: 0.0-2.0)
  system_instruction: "You're a helpful assistant." # System instructions for AI behavior

# Logger Configuration
logger:
  level: "info" # Log level (options: debug, info, warn, error)
  json: false # Output logs in JSON format

# Scheduler Configuration
scheduler:
  tasks:
    # SQL maintenance task runs daily at 3 AM
    sql_maintenance:
      schedule: "0 3 * * *" # Cron schedule expression (valid cron format)
      enabled: true # Whether task is active

    # Profile update task runs daily at 1 AM
    profile_update:
      schedule: "0 1 * * *" # Cron schedule expression (valid cron format)
      enabled: true # Whether task is active

# Bot Message Strings
messages:
  # General Messages
  welcome: "Hello! Use @botname to chat with me." # Welcome message
  general_error: "Sorry, something went wrong. Please try again later." # Generic error message
  not_authorized: "You are not authorized to use this command." # Unauthorized access message
  help: "Available commands:\n/help - Show this help message\nUse @botname to chat with the bot.\n\nAdmin commands:\n/mrl_reset - Delete all message history and profiles\n/mrl_analyze - Force analysis of unprocessed messages\n/mrl_profiles - Show all stored user profiles\n/mrl_edit_user <user_id> <field> <value> - Manually edit a user profile field (fields: aliases, origin_location, current_location, age_range, traits)" # Help command response

  # Admin Command Responses
  history_reset: "All message history and user profiles have been soft-deleted." # Response after reset
  analyzing: "Analyzing unprocessed messages to update user profiles..." # Analysis start message
  analysis_no_messages: "No new messages found to analyze." # Empty analysis result message
  analysis_complete_fmt: "Analysis complete. Processed %d messages. Updated/created %d profiles." # Analysis completion message (must contain two %d format specifiers)
  no_profiles: "No user profiles found in the database." # Empty profiles response
  profiles_header: "--- User Profiles ---\nUserID | Aliases | Origin | Current | Age | Traits\n--------------------------------------------------\n" # Profile listing header
  edit_user_usage: "Usage: /mrl_edit_user <user_id> <field_name> <new_value...>" # Usage instructions
  edit_user_invalid_id: "Invalid User ID provided. It must be a number." # Invalid ID error message
  edit_user_invalid_field_fmt: "Invalid field name: '%s'. Allowed fields are: %s" # Invalid field error (must contain %s format specifier)
  edit_user_not_found_fmt: "User profile not found for ID: %d" # User not found error (must contain %d format specifier)
  edit_user_success_fmt: "Successfully updated field '%s' for user %d." # Success message (must contain %s and %d format specifiers)
